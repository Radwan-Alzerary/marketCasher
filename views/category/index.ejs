<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Categories</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Categories</h1>
    <ul>
        <% categories.forEach(category => { %>
            <li>
                <a href="/category/<%= category._id %>"><%= category.name %></a>
            </li>
        <% }) %>
    </ul>
</body>
</html>
